<% provide(:title, 'Sign Up') %>

<div class="container">

  <div class="row">

  <!--   <div class="span-10 offset-3 pretext-block">
      <h1>A big title.</h1>
      <p>A smaller description.</p>
    </div> -->

    <div class="span-6 offset-5">
      <%= form_for(@user, html: {class: "signup-form"}) do |f| %>
        <h1 class="form-title">Sign Up</h1>

        <%= content_tag(:div, flash[:error], class: "alert alert-error") if flash[:error] %>

        <%= f.label :full_name, "Full Name" %>
        <%= f.text_field :full_name, autofocus: true  %>

        <%= f.label :email %>
        <%= f.email_field :email %>

        <div id="hint"></div>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= submit_tag "Submit", class: "btn btn-blue submit-validate" %>

      <% end %>


      <span class="form-suggestion">Already have an account? <%= link_to raw("Log in! &raquo;"), login_path %></span>
    </div>
  </div>

</div>
