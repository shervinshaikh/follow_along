<% provide(:title, 'Engage your students') %>

<section class="landing-main">
  <div class="container">
    <div class="row">

      <div class="span-16">
        <h1>Allow your students to <span style="color:#00FF3E;">Follow Along</span></h1>
      </div>
      <div class="span-10 offset-3">
        <%= image_tag '/assets/hero_1.png' %>
      </div>

    </div>
  </div>
</section>



<section class="landing-cta">
  <div class="container">
    <div class="row">

      <h1 class="section-title">FollowAlong is a presentation sharing and response tool to engage your students and get answers in real time.</h1>

      <h2>Learn more about:</h2>

      <div class="span-10 offset-3 cta-container">
        <a href="#educators" class="btn btn-green btn-large left">Benefits for Educators</a>
        <a href="#students" class="btn btn-green btn-large right">Benefits for Students</a>
      </div>


    </div>
  </div>
</section>






<section class="benefits benefits-educators" id="educators">
  <div class="container">
    <div class="row">
      <div class="span-16">

        <h1>For Educators:</h1>

        <ul>
          <li>FollowAlong is a <em>low cost, zero-configuration</em> system to engage your students.</li>
          <li>Ask questions and see answers in <em>real time.</em></li>
          <li>Get <em>fine-grained insights</em> into your students performance and knowledge</li>
        </ul>

      </div>
    </div>
  </div>
</section>





<section class="benefits benefits-students" id="students">
  <div class="container">
    <div class="row">
      <div class="span-16">

        <h1>For Students:</h1>

        <ul>
          <li>No expensive hardware required</li>
          <li>Answering questions and getting feedback increases engagement</li>
          <li>Ability to go back and review slides at own pace improves knowledge retention</li>
        </ul>

      </div>
    </div>
  </div>
</section>







<section class="final-cta">
  <div class="container">
    <div class="row">
      <div class="span-16">

        <h1>Get started with FollowAlong today.</h1>

        <a href="/pricing" class="btn btn-green btn-large">View Pricing</a>

      </div>
    </div>
  </div>
</section>









<section class="landing-footer">
  <div class="container">
    <div class="row">
      <div class="span-8 offset-4">

        <p>
          <span style="color:#0088CC;">FollowAlong</span> was created at
          <a href="http://www.santabarbara.startupweekend.org">SB Startup Weekend</a>.
        </p>

        <%= link_to "Log in", login_path %>



      </div>
    </div>
  </div>
</section>
